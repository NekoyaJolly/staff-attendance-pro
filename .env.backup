# Backup System Configuration
# Environment variables for production backup system

# Database Configuration
DB_PASSWORD=your_secure_database_password
DB_HOST=localhost
DB_PORT=5432
DB_NAME=timetracking_db
DB_USER=postgres

# Backup Configuration
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE_DAILY=0 2 * * *
BACKUP_SCHEDULE_WEEKLY=0 3 * * 0
BACKUP_SCHEDULE_MONTHLY=0 4 1 * *

# Storage Configuration
BACKUP_BASE_PATH=/var/backups/timetracking
MAX_BACKUP_SIZE_GB=100
MIN_FREE_SPACE_GB=10

# Notification Configuration
NOTIFICATION_EMAIL=admin@company.com
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
EMAIL_SMTP_SERVER=smtp.company.com
EMAIL_SMTP_PORT=587
EMAIL_FROM=backup@company.com
EMAIL_TO=admin@company.com,operations@company.com

# Monitoring Configuration
GRAFANA_PASSWORD=secure_grafana_password
PROMETHEUS_RETENTION_DAYS=90
HEALTH_CHECK_INTERVAL=6h
VALIDATION_SCHEDULE=0 6 * * *

# Alert Thresholds
BACKUP_MAX_AGE_HOURS=26
DISK_USAGE_WARNING_PERCENT=80
DISK_USAGE_CRITICAL_PERCENT=90
VALIDATION_SUCCESS_RATE_THRESHOLD=90

# Docker Configuration
DOCKER_REGISTRY=your-registry.com
IMAGE_TAG=latest
COMPOSE_PROJECT_NAME=timetracking

# Security Configuration
BACKUP_ENCRYPTION_KEY=your_backup_encryption_key
SSL_CERT_PATH=/etc/ssl/certs/timetracking.crt
SSL_KEY_PATH=/etc/ssl/private/timetracking.key

# Log Configuration
LOG_LEVEL=INFO
LOG_RETENTION_DAYS=30
SYSLOG_FACILITY=local0